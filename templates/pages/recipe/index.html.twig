{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block body %}
<div class="container">
    <h1>Mes recettes</h1>

    <a href="{{ path('recipe_new') }}" class="btn btn-primary">Créer une recette</a>

    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th>Numéro</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Difficulté</th>
                <th>Date de création</th>
                <th>Édition</th>
                <th>Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for recipe in recipes %}
                <tr class="table-light">
                    <td>{{ recipe.id }}</td>
                    <td>{{ recipe.name }}</td>
                    <td>{{ recipe.price }}</td>
                    <td>{% if recipe.difficulty %}{{ recipe.difficulty }}{% else %}Non renseigné{% endif %}</td>
                    <td>{{ recipe.createdAt|date('d/m/Y') }}</td>
                    <td>
                        <a href="#" class="btn">TODO</a>
                    </td>
                    <td>
                        <a href="#" class="btn">TODO</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation d-flex justify-content-center mt-4">
        {{ knp_pagination_render(recipes) }}
    </div>
</div>
{% endblock %}
